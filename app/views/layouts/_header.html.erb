<header class="bg-gray-500">
    <div class="flex justify-between p-5">
        <div>
            <%= link_to "Home", root_path, class:"m-2" %>
            <%= link_to "Events", myevents_path, class:"m-2" %>
        </div>

        <div class="flex">
            <% if user_signed_in? %>
                <%= link_to "Profile", profile_path, method: :delete, class:"mx-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
                <%= button_to "Logout", destroy_user_session_path, method: :delete, class:"mx-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
            <% else %>
                <%= link_to "Login", new_user_session_path, class:"mx-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full m-2"%>
                <%= link_to "Register", new_user_registration_path, class:"mx-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full m-2" %>
            <% end %>
        </div>
    </div>
</header> 